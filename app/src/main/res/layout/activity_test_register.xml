<?xml version="1.0" encoding="utf-8"?>



<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/main"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#FFDBDB"
tools:context=".Activities.TestRegisterActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hesap Oluşturun"
        android:textColor="#785757"
        android:textSize="45sp"
        style="@style/TextAppearance.MaterialComponents.Headline6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.091" />

    <LinearLayout
    android:layout_width="340dp"
    android:layout_height="420dp"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="5dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/textView"
    app:layout_constraintVertical_bias="0.246">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/TextAppearance.MaterialComponents.Headline2"
        android:layout_marginTop="20dp"
       android:layout_marginBottom="15dp"
        android:text="Bilgilerinizi giriniz"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="30sp" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Kullanıcı adı"
        android:textColorHint="#785757"
        app:startIconDrawable="@drawable/baseline_person_outline_24"
        app:errorEnabled="true"
        app:boxStrokeColor="#CB2F2F"
        app:hintTextColor="#CB2F2F"

        android:ems="10"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/namer_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textColor="@color/black"
            android:textColorHint="#6B6B6B" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:textColorHint="#785757"
        app:startIconDrawable="@drawable/baseline_email_24"
        app:boxStrokeColor="#CB2F2F"
        app:hintTextColor="#CB2F2F"

        app:errorEnabled="true"
        android:ems="10"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/email_edittext"
            android:layout_width="match_parent"
            android:textColorHint="#6B6B6B"
            android:layout_height="wrap_content"
            android:textColor="@color/black"

            android:inputType="textEmailAddress" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Şifre"
        android:textColorHint="#785757"
        app:boxStrokeColor="#CB2F2F"
        app:hintTextColor="#CB2F2F"

        app:startIconDrawable="@drawable/baseline_key_24"
        app:errorEnabled="true"
        android:ems="10"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/passwordr_edittext"
            android:layout_width="match_parent"
            android:textColorHint="#6B6B6B"
            android:layout_height="wrap_content"
            android:textColor="@color/black"

            android:inputType="textPassword" />
    </com.google.android.material.textfield.TextInputLayout>


    <Button
        android:id="@+id/button7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="kaydol"
        android:text="Kaydol"
        android:backgroundTint="#CB2F2F"
        android:textColor="@color/white"
        style="?attr/textAppearanceButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passwordr_edittext"
        app:layout_constraintVertical_bias="0.244"
        tools:layout_editor_absoluteX="0dp" />


    <TextView
        android:id="@+id/hataMesaji_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Hatalı kullancı numarası veya şifre"
        android:textAlignment="center"
        android:textColor="#FF0000"
        android:visibility="gone" />
</LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>