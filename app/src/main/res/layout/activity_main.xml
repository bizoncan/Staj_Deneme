<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ListView
        android:id="@+id/machineList"
        android:layout_width="313dp"
        android:layout_height="256dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.372" />

    <EditText
        android:id="@+id/arizaTuruEdt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:inputType="text"
        android:text="Arıza Türü"
        app:layout_constraintStart_toStartOf="@+id/machineList"
        app:layout_constraintTop_toBottomOf="@+id/machineList" />

    <Button
        android:id="@+id/btn_ArızaEkle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:onClick="ArizaEkle"
        android:text="Arıza Ekle"
        app:layout_constraintStart_toStartOf="@+id/arizaTuruEdt"
        app:layout_constraintTop_toBottomOf="@+id/arizaTuruEdt" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Geçmiş Arızaları Görüntüle"
        app:layout_constraintStart_toStartOf="@+id/btn_ArızaEkle"
        app:layout_constraintTop_toBottomOf="@+id/btn_ArızaEkle" />

</androidx.constraintlayout.widget.ConstraintLayout>